alias via='vim ~/.bash/aliases'
alias cdd='cd ~/Development'
alias la='. ~/.bash/aliases'
alias vi='mvim -v'
alias vim='mvim -v'

### RUBY!!! ###
alias be='bundle exec'
alias bers='be rails s'
alias berc='be rails c'
alias begs='be guard start'
alias bi='bundle install'
alias tch-bi='bundle install --standalone --binstubs ~/Development/teaching_channel/teaching-channel/bundle/bin'
alias db:nuke='rake db:drop db:create db:migrate db:seed db:test:prepare'

### GIT!!!! ###
alias ga='grep git ~/.bash/aliases | grep -v galias | cut -f 2- -d " "'
alias g='git'
alias glx='git log --graph --all --decorate --pretty=format:"%C(magenta)%h %C(blue)%ai %C(green)%an %C(cyan)%s %C(yellow bold)%d"'
alias glh='git update-index --assume-unchanged'
alias gluh='git update-index --noassume-unchanged'
alias glsh='git ls-files -v | grep ^[a-z]'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gcm='git checkout master'
alias gs='git status'
alias gf='git fetch -p'
alias gb='git branch -a'
alias gpoh='git push origin head'

